{
    "manifest_version": 3,
    "name": "Hello Extensions",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
        "default_popup": "hello.html",
        "default_icon": "icons/icon128.png"
    },
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "background.js",
                "popup.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "nativeMessaging",
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*.png",
                "assets/*.jpeg"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ]
}